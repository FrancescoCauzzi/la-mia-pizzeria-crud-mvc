@{
    ViewData["Title"] = "Our Pizzas";
}

<div class="d-flex justify-content-center flex-column text-center __pizza-index">
    <h1 class="display-4">These are our pizzas</h1>

    @* nella slide sintassi divers da questa sotto  *@
    @model List<la_mia_pizzeria_crud_mvc.Models.Pizza>

    @if (Model.Count != 0)
    {
        <div class="d-flex justify-content-center  p-3 __pizza-container">
            @foreach (var pizza in Model)
            {
                <div class="d-flex flex-column __pizza-card">

                    <h3>@pizza.Name</h3>
                    <img src="@(!string.IsNullOrEmpty(pizza.ImageUrl) ? pizza.ImageUrl : "/images/default_pizza.png")" alt="Pizza image">

                    <p>Description: @pizza.Description</p>
                    <p>Price: @pizza.Price &euro;</p>

                </div>
            }

        </div>
    }
    else
    {
        <div class="">
            <p>Sorry, we don't have any pizza available at the moment.</p>          

        </div>
    }
</div>
