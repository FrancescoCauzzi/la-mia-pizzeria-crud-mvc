@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="d-flex gap-3 justify-content-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="nav-item">
            <a id="manage" class=" text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </div>
        <div class="nav-item">
            <form id="logoutForm" class="form-indivne" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-divnk text-dark">Logout</button>
            </form>
        </div>
    }
    else
    {
        <div class="nav-item">
            <a class=" text-dark btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
        <div class="nav-item">
            <a class=" text-dark btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
</div>
